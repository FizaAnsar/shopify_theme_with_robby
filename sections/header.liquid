<!-- header.liquid -->

<header class="site-header" style="background-color: {{ section.settings.header_bg_color }};">
    <!-- Logo Section with Dynamic Dimensions -->
    <div class="header-logo">
        <a href="{{ shop.url }}">
            {% if section.settings.logo_image %}
                <img src="{{ section.settings.logo_image | img_url: '100x' }}" alt="{{ shop.name }}"
                     style="width: {{ section.settings.logo_width }}px; height: {{ section.settings.logo_height }}px;" />
            {% else %}
                <img src="{{ 'logo.png' | asset_url }}" alt="Default Logo" />
            {% endif %}
        </a>
    </div>

    <!-- Navigation Section with Customizable Link Colors -->
    <nav class="header-navigation">
        <ul>
            {% if linklists.main-menu.links.size > 0 %}
                {% for link in linklists.main-menu.links %}
                    <li>
                        <a href="{{ link.url }}" style="color: {{ section.settings.nav_link_color }};">
                            {{ link.title }}
                        </a>
                    </li>
                {% endfor %}
            {% else %}
                <li><a href="{{ shop.url }}">Home</a></li>
                <li><a href="/collections/all">Shop</a></li>
                <li><a href="/pages/about-us">About Us</a></li>
                <li><a href="/pages/contact">Contact</a></li>
            {% endif %}
        </ul>
    </nav>

    <!-- Icons Section with Customizable Colors -->
    <div class="header-icons">
        <a href="/search" class="search-icon" style="color: {{ section.settings.icon_color }};"><i class="fas fa-search"></i></a>
        <a href="/cart" class="cart-icon" style="color: {{ section.settings.icon_color }};"><i class="fas fa-shopping-cart"></i></a>
    </div>
</header>

<!-- Schema for Header Settings -->
{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Logo Image"
        },
        {
            "type": "number",
            "id": "logo_width",
            "label": "Logo Width (px)",
            "default": 100
        },
        {
            "type": "number",
            "id": "logo_height",
            "label": "Logo Height (px)",
            "default": 50
        },
        {
            "type": "color",
            "id": "header_bg_color",
            "label": "Header Background Color",
            "default": "#1b312b"
        },
        {
            "type": "color",
            "id": "nav_link_color",
            "label": "Navigation Link Color",
            "default": "#ffffff"
        },
        {
            "type": "color",
            "id": "nav_hover_color",
            "label": "Navigation Hover Color",
            "default": "#d8e999"
        },
        {
            "type": "color",
            "id": "icon_color",
            "label": "Icon Color",
            "default": "#ffffff"
        },
        {
            "type": "select",
            "id": "font_family",
            "label": "Font Family",
            "options": [
                { "value": "Montserrat, sans-serif", "label": "Montserrat" },
                { "value": "Arial, sans-serif", "label": "Arial" },
                { "value": "Georgia, serif", "label": "Georgia" },
                { "value": "Helvetica, sans-serif", "label": "Helvetica" }
            ],
            "default": "Montserrat, sans-serif"
        },
        {
            "type": "range",
            "id": "font_size",
            "label": "Font Size (px)",
            "default": 16,
            "min": 12,
            "max": 30,
            "step": 1
        },
        {
            "type": "select",
            "id": "font_weight",
            "label": "Font Weight",
            "options": [
                { "value": "400", "label": "Regular" },
                { "value": "500", "label": "Medium" },
                { "value": "700", "label": "Bold" }
            ],
            "default": "400"
        }
    ]
}
{% endschema %}
