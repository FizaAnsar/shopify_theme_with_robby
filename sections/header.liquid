<!-- header.liquid -->
<header class="site-header {{ section.settings.sticky_header }}" style="background-color: {{ section.settings.header_bg_color }};">

    <!-- Logo Section with Dynamic Dimensions -->
    {% comment %} {% if section.settings.logo_position %}{{ section.settings.logo_position }}{% else %}"middle-left"{% endif %} {% endcomment %}
    <div class="header-logo {% if section.settings.logo_position %}{{ section.settings.logo_position }}{% else %}middle-left{% endif %}" style="width:33.33%">
        <a href="{{ shop.url }}">
            {% if section.settings.logo_image %}
                <img src="{{ section.settings.logo_image | img_url: '100x' }}" alt="{{ shop.name }}" style=" width: {{ section.settings.logo_width }}px;">
            {% else %}
                <img src="{{ 'logo.png' | asset_url }}" alt="Default Logo" />
            {% endif %}
        </a>
    </div>

    <!-- Navigation Section with Customizable Link Colors -->
   <!-- Navigation Section with Customizable Link Colors -->
{% if section.settings.menu_main_option != 'remove_menu' %}
    <nav class="header-navigation" style="width:33.33%">
        <ul style="{% if section.settings.logo_position  == 'middle-left' %} justify-content:space-between; {% endif %}">
            {% for link in linklists.main-menu.links %}
                <li><a href="{{ link.url }}" style="color: {{ section.settings.nav_link_color }};">{{ link.title }}</a></li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}



    <!-- Icons Section with Customizable Colors -->
    <div class="header-icons" >
        <a href="/search" class="search-icon" style="color: {{ section.settings.icon_color }}"><i class="fas fa-search"></i></a>
        <a href="/cart" class="cart-icon" style="color: {{ section.settings.icon_color }}"><i class="fas fa-shopping-cart"></i></a>
    </div>

</header>

<!-- Schema for Header Settings -->
{% schema %}
{
    "name": "Header",
    "settings": [
        { "type": "image_picker", "id": "logo_image", "label": "Logo Image" },
        { "type": "range", "id": "logo_width", "label": "Logo Width (px)", "default": 100, "min": 50, "max": 150, "step": 1 },

        { "type": "select", "id": "logo_position", "label": "Desktop Logo Position", "options": [
            { "value": "middle-center", "label": "Middle Center" },
            { "value": "middle-left", "label": "Middle Left" }
        ], "default": "middle-left" },
        { "type": "select", "id": "menu_main_option", "label": "Menu Main", "options": [
            { "value": "menu", "label": "Menu" },
            { "value": "remove_menu", "label": "Remove Menu" }
        ], "default": "menu" },
        { "type": "select", "id": "sticky_header", "label": "Sticky Header", "options": [
            { "value": "on_scroll_up", "label": "On Scroll Up" },
            { "value": "always", "label": "Always" },
            { "value": "none", "label": "None" }
        ], "default": "on_scroll_up" },
        { "type": "color", "id": "header_bg_color", "label": "Header Background Color", "default": "#1b312b" },
        { "type": "color", "id": "nav_link_color", "label": "Navigation Link Color", "default": "#ffffff" },
        { "type": "color", "id": "icon_color", "label": "Icon Color", "default": "#ffffff" }
    ]
}
{% endschema %}
