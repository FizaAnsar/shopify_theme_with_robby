{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Slide 1 Image"
    },
    {
      "type": "text",
      "id": "text_1",
      "label": "Slide 1 Text"
    },
    {
      "type": "url",
      "id": "button_url_1",
      "label": "Slide 1 Button Link"
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Slide 1 Button Text"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Slide 2 Image"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Slide 2 Text"
    },
    {
      "type": "url",
      "id": "button_url_2",
      "label": "Slide 2 Button Link"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Slide 2 Button Text"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Hero Slider",
      "category": "Hero"
    }
  ]
}
{% endschema %}

<div class="hero-slider">
  <div class="slider">
    <!-- Slide 1 -->
    <div class="slide">
      <div class="slide-inner">
        <img src="{{ section.settings.image_1 | img_url: '1900x2500' }}" alt="Slide 1">
        <div class="overlay"></div>
        <div class="content">
          <h1>{{ section.settings.text_1 | default: 'Default Heading for Slide 1' }}</h1>
          <a href="{{ section.settings.button_url_1 | default: '#' }}" class="btn">
            {{ section.settings.button_text_1 | default: 'Learn More' }}
          </a>
        </div>
      </div>
    </div>

    <!-- Slide 2 -->
    <div class="slide">
      <div class="slide-inner">
        <img src="{{ section.settings.image_2 | img_url: '1900x2500' }}" alt="Slide 2">
        <div class="overlay"></div>
        <div class="content">
          <h1>{{ section.settings.text_2 | default: 'Default Heading for Slide 2' }}</h1>
          <a href="{{ section.settings.button_url_2 | default: '#' }}" class="btn">
            {{ section.settings.button_text_2 | default: 'Learn More' }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>




<script>
document.addEventListener('DOMContentLoaded', function () {
  const slider = document.querySelector('.slider');
  const slides = document.querySelectorAll('.slide');
  let index = 0;

  setInterval(() => {
    index = (index + 1) % slides.length;
    slider.style.transform = `translateX(-${index * 100}%)`;
  }, 5000);
});
</script>