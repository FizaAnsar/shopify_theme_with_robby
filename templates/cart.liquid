{% form 'cart' , cart%}
    <h1>
    Cart
    </h1>
    {% if cart.empty? %}
        <p>Hey Your Cart is empty! </p>
        {% else %}
            {% for item in cart.items %}
                <div>
                <img src="{{item.image  | image_url: width:200}}"/>
                <h2>{{item.title}}</h2>
                {% comment %} <h2>{{item.price | money}}</h2> {% endcomment %}
                <h2>{{item.final_line_price | money}}</h2>
                <input name="updates[]" value="{{item.quantity}}">
                <a href="{{item.url_to_remove}}">Remove</a>
                </div>
            {% endfor %}
            <hr/>

            <p>Total : {{cart.total_price | money}}</p>
            <button name="update" type="submit">Update</button>
            <button name="checkout" type="submit">Checkout</button>
    {% endif %}
{% endform %}